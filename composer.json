{
    "name": "Corollarium/Formularium",
    "description": "Form validation and generation for PHP with custom frontend generators",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "keywords": ["form"],
    "homepage": "https://github.com/Corollarium/Formularium",
    "autoload": {
        "psr-4": {
            "Formularium\\": "Formularium/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "fzaninotto/faker": "^1.9",
        "respect/validation": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "scripts": {
        "make:datatype": "bash ./util/makeDatatype.sh",
        "make:framework": "bash ./util/makeframework.sh",
        "makeKitchenSink": "php ./util/makeKitchenSink.php",
        "coverage": "mkdir build 2> /dev/null && ./vendor/bin/phpunit --bootstrap vendor/autoload.php --whitelist Formularium --coverage-html build/coverage-report tests/",
        "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests/"
    }
}